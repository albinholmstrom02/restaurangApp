@model IEnumerable<frontendApp.ViewModels.DishViewModel>
@using frontendApp.ViewModels;
@{
    ViewData["Title"] = "Home page";
}

<div>
    <header class="bg-dark text-white">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-md-3">
                    <h2 class="mb-0">Fast and Tasty</h2>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "Cart")" class="btn btn-info">
                        <i class="fas fa-shopping-cart"></i> Cart
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="container mt-5">
        <div class="row">
            @foreach (var dish in Model)
            {
                if (dish.DishType.ToString() == "Pizza")
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@dish.ImageUrl" alt="@dish.Name" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">@dish.Name</h5>
                                <p class="card-text">@dish.Description</p>
                                <div class="price h4 text-primary font-weight-bold">
                                    $@dish.Price
                                </div>
                                <div class="mt-3">
                                    <a href="Home/Details/@dish.Id" class="btn btn-secondary btn-block">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
